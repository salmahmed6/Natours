  nav.nav.nav--user
  if user
    a.nav__el.nav__el--logout(href='/logout') Log out
    a.nav__el(href="/me")
      img(src=`/img/users/${user.photo}` || "/img/users/default.png", alt=" User photo")
      span= user.name.split(' ')[0]
  else
    a.nav__el.nav__el--cta(href='/login') login
    a.nav__el.nav__el--cta(href='/signup') Sign up